@model examen_2do_crud.Models.Producto

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Producto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Codigo" class="control-label"></label>
                <input asp-for="Codigo" class="form-control" />
                <span asp-validation-for="Codigo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombre_Productos" class="control-label"></label>
                <select asp-for="Nombre_Productos" class="form-control">
                    <option value="1">Coca-Cola</option>
                    <option value="2">Fanta</option>
                    <option value="3">Seven-up</option>
                    <option value="4">Sprit</option>
                    <option value="5">Pepsi</option>
                </select>
                <span asp-validation-for="Nombre_Productos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tamaño" class="control-label"></label>
                <select asp-for="Tamaño" class="form-control">
                    <option value="1">250 ml</option>
                    <option value="2">500 ml</option>
                    <option value="3">1 Lt</option>
                    <option value="4">2 Lts</option>
                    <option value="5">3 Lts</option>
                </select>
                <span asp-validation-for="Tamaño" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sabor" class="control-label"></label>
                <select asp-for="Sabor" class="form-control">
                    <option value="1">Normal</option>
                    <option value="2">Coca-Cola Cero</option>
                    <option value="3">Fanta Papaya</option>
                    <option value="4">Fanta Naranja</option>
                    <option value="5">Fanta Mandarina</option>
                </select>
                <span asp-validation-for="Sabor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Atras</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
